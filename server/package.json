{
  "name": "amazon-clone-server",
  "version": "1.0.0",
  "description": "Amazon Clone Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "install-client": "cd ../client && npm install",
    "start-client": "cd ../client && npm run dev",
    "dev-all": "concurrently \"npm run dev\" \"npm run start-client\"",
    "install-all": "npm install && npm run install-client"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.40.0",
    "nodemailer": "^6.9.4",
    "razorpay": "^2.9.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "express-mongo-sanitize": "^2.2.0",
    "xss-clean": "^0.1.4",
    "cookie-parser": "^1.4.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "concurrently": "^8.2.0"
  }
}
